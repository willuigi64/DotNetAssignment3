@model IEnumerable<DotNetAssignment3.Models.Response>

@{
    ViewData["Title"] = "Responses";
}

<h1>Responses</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Post)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResponseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResponseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResponseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
